{
  "name": "solid-codemirror",
  "version": "1.0.2",
  "description": "CodeMirror component for SolidJS",
  "module": "./solid-codemirror.mjs",
  "types": "./public-api.d.ts",
  "exports": {
    ".": {
      "import": "./solid-codemirror.mjs",
      "types": "./public-api.d.ts"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/riccardoperra/solid-codemirror.git"
  },
  "scripts": {
    "build": "rimraf dist && vite build && npm run build:types",
    "build:release": "npm run build && node scripts/prepareBuild.js",
    "build:types": "tsc -p tsconfig.dts.json",
    "lint": "eslint . --ext .js,.jsx,.mjs,.ts,.tsx",
    "semantic-release": "semantic-release",
    "test": "jest"
  },
  "keywords": [
    "solidjs",
    "solid-js",
    "codemirror",
    "codemirror6",
    "ide",
    "solid-codemirror",
    "editor",
    "syntax",
    "code"
  ],
  "type": "module",
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-angular": "17.0.0",
    "@commitlint/config-conventional": "17.0.2",
    "@rollup/plugin-dynamic-import-vars": "^1.4.3",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "babel-preset-solid": "^1.4.4",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup-plugin-dts": "^4.2.2",
    "semantic-release": "^19.0.3",
    "solid-jest": "^0.2.0",
    "solid-js": "^1.3.4",
    "vite-plugin-solid": "^2.2.6",
    "solid-testing-library": "^0.3.0",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3",
    "vite": "^2.9.12",
    "vite-plugin-dts": "^1.2.0",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "peerDependencies": {
    "@codemirror/commands": "^6.0.0",
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "solid-js": "^1.4.4"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@codemirror/commands": "^6.0.0",
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "solid-js": "^1.4.4"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,css,json,md,jsx,yml,yaml}": "prettier --ignore-path .gitignore --write"
  }
}
